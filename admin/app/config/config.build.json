{
  "mirrorLogsDir": "/var/log/apt-mirror",
  "nginxLogsDir": "/var/log/nginx",
  "filesDir": "/var/www/files",
  "healthReportFile": "/var/health-reports/health.json",
  "mirroredPackagesDir": "/var/spool/apt-mirror",
  "npmPackagesDir": "/var/www/npm",
  "resourceMonitorScriptPath": "/usr/local/bin/resource-monitor.sh",
  "mirrorListPath": "/etc/apt/mirror.list",
  "startMirrorScriptPath": "/usr/local/bin/start-mirror.sh",
  "stopMirrorScriptPath": "/usr/local/bin/stop-mirror.sh",
  "htpasswdPath": "/var/auth/.htpasswd",
  "jwtSecret": "your-secret-key-change-in-production",
  "isNpmProxyEnabled": true,
  "hosts": [
    { "id": "mirror", "address": "mirror.intra", "name": "APT Mirror", "description": "APT Mirror" },
    { "id": "admin", "address": "admin.mirror.intra", "name": "Admin", "description": "Admin UI for the mirror" },
    { "id": "files", "address": "files.mirror.intra", "name": "Files", "description": "Files (user uploads)" },
    { "id": "npm", "address": "npm.mirror.intra", "name": "NPM Mirror", "description": "NPM Registry Cache" }
  ]
}